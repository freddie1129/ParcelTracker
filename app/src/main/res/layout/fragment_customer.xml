<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Freddie"
                android:textColor="@color/colorFontPrimary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ti kk k k k k kkjaidk  k k jdiadfkk  k k jkssdfk  k k k k kk k k k k k k k k k k k "
                android:textColor="@color/colorFontSecond" />

            <TextView
                android:id="@+id/textView_phoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0413590972"
                android:textColor="@color/colorFontSecond" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/imageButton_customer_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorList"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_dehaze" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="?android:attr/listDivider" />

</android.support.v7.widget.CardView>
